    <DataTemplate x:Key="listTaskTemplateHistory">
        <StackPanel
                Orientation="Horizontal"
                Margin="0 0 10 0"
                Background="#F5F5F5">
            <StackPanel.Effect>
                <DropShadowEffect
                        ShadowDepth="2"
